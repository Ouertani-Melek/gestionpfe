    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-content">
                    <!-- Section Title -->
                    <div class="section-title alt-sec-title">
                        <h2>Profil Details</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. A, debitis!</p>
                    </div>
                    <!-- Page breadcrumb -->
                    <div class="page-breadcrumb">
                        <ul>
